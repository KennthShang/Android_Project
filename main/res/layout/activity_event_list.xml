<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.administrator.project.EventList">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_linear_layout_event_list"
        android:background="@color/gray"
        android:orientation="horizontal">
        <Button
            android:id="@+id/el_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:text="事件类别"
            android:textSize="25dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/graph_event_list"
            android:text="统计图"
            android:textSize="15dp"
            android:clickable="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/el_tri_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/tri_left"/>
        <TextView
            android:id="@+id/el_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="12月10日"/>
        <ImageButton
            android:id="@+id/el_tri_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/tri_right"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_linear_layout_event_list"
        android:layout_marginTop="20dp"
        android:id="@+id/event_list"/>
    <Button
        android:id="@+id/add_button_event_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/event_list"
        android:layout_centerHorizontal="true"
        android:text="增加"/>

</LinearLayout>
