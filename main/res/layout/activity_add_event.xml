<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.administrator.project.AddEvent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/color_back"
            android:text="返回"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@string/title_addEvent'
            android:textSize="18sp"
            android:layout_gravity="center"/>
        <Button
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/color_confirm"
            android:text="确认"/>
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/event_name_hint"
        android:textSize="20sp"
        android:background="@drawable/edit_bg"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:id="@+id/event_name_add"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/time_add"
        android:visibility="gone"
        android:hint="日期"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_marginTop="40dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/color_tri_left"
            android:src="@mipmap/tri_left"
            />
        <TextView
            android:id="@+id/color_tv"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12月10日"
            android:textSize="25sp"/>
        <ImageButton
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:id="@+id/color_tri_right"
            android:src="@mipmap/tri_right"/>
    </LinearLayout>

    <GridLayout
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="4"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/one"
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:text=""
            android:gravity="center"
            android:background="@color/red_blue1"/>
        <Button
            android:id="@+id/two"
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:background="@color/red_green1"
            android:text=""/>
        <Button
            android:id="@+id/three"
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:background="@color/green_blue1"
            android:text=""/>
        <Button
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:id="@+id/four"
            android:background="@color/red_green3"
            android:text=""/>
        <Button
            android:id="@+id/five"
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:background="@color/green_blue3"
            android:text=""/>
        <Button
            android:id="@+id/six"
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:background="@color/red_blue3"
            android:text=""/>
        <Button
            android:id="@+id/seven"
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:background="@color/red_blue2"
            android:text=""/>
        <Button
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:background="@color/red_green2"
            android:id="@+id/eight"
            android:text=""/>
        <Button
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:id="@+id/nine"
            android:background="@color/green_blue2"
            android:text=""/>
        <Button
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:id="@+id/ten"
            android:background="@color/red_green5"
            android:text=""/>
        <Button
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:id="@+id/eleven"
            android:background="@color/green_blue5"
            android:text=""/>
        <Button
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:id="@+id/twelve"
            android:background="@color/red_blue5"
            android:text=""/>
        <Button
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:id="@+id/thirten"
            android:background="@color/red_blue4"
            android:text=""/>
        <Button
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:id="@+id/fourteen"
            android:background="@color/red_green4"
            android:text=""/>
        <Button
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:id="@+id/fifteen"
            android:background="@color/green_blue6"
            android:text=""/>
        <Button
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:layout_width="70dp"
            android:id="@+id/sixteen"
            android:background="@color/green_blue5"
            android:text=""/>
    </GridLayout>
</LinearLayout>
